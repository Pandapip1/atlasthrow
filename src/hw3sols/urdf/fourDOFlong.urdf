<?xml version="1.0"?>

<robot name="FourDOF">

  <!-- *************************************************** -->
  <!-- ***************** Kinematic Chain ***************** -->
  <!-- *************************************************** -->
  <!-- <link name="..."> is really a frame!                -->
  <!-- <joint name="..." type="fixed">      is a fixed shift.    -->
  <!-- <joint name="..." type="continuous"> is a revolute joint. -->
  <!-- <joint name="..." type="prismatic">  is a linear   joint. -->
  <!-- Note the 'origin' tag in the joints defines the shift and
       reorientation, i.e. the transform.  For moving joints, this
       happens before the continuous joint rotates around 'axis'. -->

  <link name="world">
  </link>

  <!-- Shift 0 -->
  <joint name="shift0" type="fixed">
    <parent link="world"/>
    <child  link="frame0prime"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>

  <link name="frame0prime">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<cylinder length="0.2" radius="0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>
  
  <!-- Joint 1 -->
  <joint name="theta1" type="continuous">
    <parent link="frame0prime"/>
    <child  link="frame1"/>
    <axis   xyz="0 0 1"/>
  </joint>

  <link name="frame1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<cylinder length="0.4" radius="0.01"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Shift 1 -->
  <joint name="shift1" type="fixed">
    <parent link="frame1"/>
    <child  link="frame1prime"/>
    <origin xyz="0 0.2 0.2" rpy="0 0 0"/>
  </joint>

  <link name="frame1prime">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
	<cylinder length="0.2" radius="0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>
  
  <!-- Joint 2 -->
  <joint name="theta2" type="continuous">
    <parent link="frame1prime"/>
    <child  link="frame2"/>
    <axis   xyz="0 1 0"/>
  </joint>

  <link name="frame2">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
	<cylinder length="0.4" radius="0.01"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Shift 2 -->
  <joint name="shift2" type="fixed">
    <parent link="frame2"/>
    <child  link="frame2prime"/>
    <origin xyz="0 0.2 -0.2" rpy="0 0 0"/>
  </joint>

  <link name="frame2prime">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<cylinder length="0.2" radius="0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <!-- Joint 3 -->
  <joint name="theta3" type="continuous">
    <parent link="frame2prime"/>
    <child  link="frame3"/>
    <axis   xyz="0 0 -1"/>
  </joint>

  <link name="frame3">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<cylinder length="0.4" radius="0.01"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Shift 3 -->
  <joint name="shift3" type="fixed">
    <parent link="frame3"/>
    <child  link="frame3prime"/>
    <origin xyz="0 0.2 -0.2" rpy="0 0 0"/>
  </joint>

  <link name="frame3prime">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
	<cylinder length="0.2" radius="0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <!-- Joint 4 -->
  <joint name="theta4" type="continuous">
    <parent link="frame3prime"/>
    <child  link="frame4"/>
    <axis   xyz="0 1 0"/>
  </joint>

  <link name="frame4">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
	<cylinder length="0.4" radius="0.01"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Shift 4 = Tip -->
  <joint name="final" type="fixed">
    <parent link="frame4"/>
    <child  link="tip"/>
    <origin xyz="0 0.2 0" rpy="0 0 0"/>
  </joint>

  <link name="tip">
  </link>


  <!-- *************************************************** -->
  <!-- ****************** Named Colors ******************* -->
  <!-- *************************************************** -->

  <material name="white">    <color rgba="1.00 1.00 1.00 1"/>  </material>
  <material name="gray">     <color rgba="0.60 0.60 0.60 1"/>  </material>
  <material name="table">    <color rgba="0.85 0.77 0.77 1"/>  </material>
  <material name="black">    <color rgba="0.00 0.00 0.00 1"/>  </material>

  <material name="red">      <color rgba="1.00 0.00 0.00 1"/>  </material>
  <material name="green">    <color rgba="0.00 1.00 0.00 1"/>  </material>
  <material name="blue">     <color rgba="0.00 0.00 1.00 1"/>  </material>

  <material name="cyan">     <color rgba="0.00 1.00 1.00 1"/>  </material>
  <material name="magenta">  <color rgba="1.00 0.00 1.00 1"/>  </material>
  <material name="yellow">   <color rgba="1.00 1.00 0.00 1"/>  </material>

  <material name="orange">   <color rgba="1.00 0.65 0.00 1"/>  </material>


  <!-- *************************************************** -->
  <!-- *********** Additional Visual Elements ************ -->
  <!-- *************************************************** -->

  <!-- Attach the hand -->
  <joint name="attach-palm" type="fixed">
    <parent link="tip"/>
    <child  link="palm"/>
  </joint>
  <link name="palm">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
	<cylinder length="0.1" radius="0.01"/>
      </geometry>
      <material name="orange"/>
    </visual>
  </link>

  <joint name="attach-leftfinger" type="fixed">
    <parent link="tip"/>
    <child  link="leftfinger"/>
  </joint>
  <link name="leftfinger">
    <visual>
      <origin xyz="-0.05 0.05 0" rpy="1.5708 0 0"/>
      <geometry>
	<cylinder length="0.1" radius="0.01"/>
      </geometry>
      <material name="orange"/>
    </visual>
  </link>

  <joint name="attach-rightfinger" type="fixed">
    <parent link="tip"/>
    <child  link="rightfinger"/>
  </joint>
  <link name="rightfinger">
    <visual>
      <origin xyz="0.05 0.05 0" rpy="1.5708 0 0"/>
      <geometry>
	<cylinder length="0.1" radius="0.01"/>
      </geometry>
      <material name="orange"/>
    </visual>
  </link>

</robot>
